<h3>{{viewTitle}}</h3>

<form action="/employee" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{employee._id}}">
    <div class="form-group">
        <label>Họ Tên</label>
        <input type="text" class="form-control" name="fullName" placeholder="Họ Tên" value="{{employee.fullName}}">
        <div class="text-danger">
            {{employee.fullNameError}}</div>
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email" placeholder="Email" value="{{employee.email}}">
        <div class="text-danger">
            {{employee.emailError}}</div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Điện Thoại</label>
            <input type="text" class="form-control" name="mobile" placeholder="Điện Thoại" value="{{employee.mobile}}">
        </div>
        <div class="form-group col-md-6">
            <label>Thành Phố</label>
            <input type="text" class="form-control" name="city" placeholder="Thành Phố" value="{{employee.city}}">
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> OK</button>
        <a class="btn btn-secondary" href="/employee/list"><i class="fa fa-list-alt"></i> Xem danh sách</a>
    </div>
</form>